select * from crosstab(
  'select  row_id, key, value from T  order by 1',
  'select distinct key from T'
) as (
   row_id integer
  , "x" integer
  , "y" integer
  , "z" integer
) ;
------------------------------------------- ODPOWIEDè


select * from crosstab(
  'select  row_id, key, value from T  order by 1',
  'select ''X'' UNION ALL select ''Y'' UNION ALL select ''Z'';'
) as (
   row_id integer
  , x integer
  , y integer
  , z integer
) ;






